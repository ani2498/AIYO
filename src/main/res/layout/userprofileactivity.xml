<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inclined_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:textAlignment="center"
        android:id="@+id/appbarLayout"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="48dp"
            android:background="@drawable/splash_gradient"

            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/backarrowtoolbartv"
                android:src="@drawable/back_arrow_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="My Account"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbarLayout"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:src="@drawable/add_image_icon"
            android:layout_gravity="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/TextColor"
                android:text="Username"
                />
            <EditText
                android:id="@+id/usernameEt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Aniket Modker"
                android:textSize="14sp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/LightGrey"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:background="@drawable/roundbutton_rectsngle_light_bckgnd"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/TextColor"
                android:text="Mobile no."/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="9039335274"
                android:textSize="14sp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/LightGrey"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:inputType="number"
                android:background="@drawable/roundbutton_rectsngle_light_bckgnd"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/TextColor"
                android:text="University email"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="aniket@acropolis.in"
                android:textSize="14sp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/LightGrey"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:background="@drawable/roundbutton_rectsngle_light_bckgnd"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:layout_gravity="center"
                android:textColor="@color/TextColor"
                android:text="Graduation date"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Select date"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/selectdateTv"
                android:background="@drawable/roundbutton_rectsngle_light_bckgnd"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/TextColor"
                android:text="Password"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="14sp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/LightGrey"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:inputType="textPassword"
                android:background="@drawable/roundbutton_rectsngle_light_bckgnd"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/TextColor"
            android:layout_marginTop="12dp"
            android:text="Change your city based on your location"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/TextColor"
                android:text="City"/>
            <Spinner
                android:layout_width="200dp"
                android:layout_height="24dp"
                android:background="@drawable/roundbutton_rectsngle_light_bckgnd">
            </Spinner>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Accoont number and sort code only required for AIYO Sellers."
            android:textColor="@color/TextColor"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/TextColor"
                android:text="Sort Code."/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="12"
                android:inputType="number"
                android:textSize="14sp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/LightGrey"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:background="@drawable/roundbutton_rectsngle_light_bckgnd"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/TextColor"
                android:text="Account no."/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="85487656764118945"
                android:textSize="14sp"
                android:singleLine="true"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:textColorHint="@color/LightGrey"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:background="@drawable/roundbutton_rectsngle_light_bckgnd"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="16dp"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/roundbutton_active"/>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/LightGrey"
                android:padding="8dp"
                >
                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/TextColor"
                    android:text="Add your payment methods"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/right_arrow_icon"/>

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/splash_gradient"
            android:padding="8dp"
            >
            <TextView
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:text="Save account information"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/action_done_icon"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>