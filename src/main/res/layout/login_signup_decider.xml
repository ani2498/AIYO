<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    android:background="@drawable/splash_gradient">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_above="@id/aiyo_signin_id"
        android:layout_marginBottom="32dp"
        android:src="@drawable/logo" />

        <TextView
            android:id="@+id/facebook_signin_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/roundbutton_transparent"
            android:drawableEnd="@drawable/right_arrow_icon"
            android:focusable="true"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="56dp"
            android:text="Sign In With Facebook"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/aiyo_signin_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="56dp"
            android:layout_above="@+id/facebook_signin_id"
            android:layout_alignParentStart="true"
            android:background="@drawable/roundbutton_transparent"
            android:drawableEnd="@drawable/right_arrow_icon"
            android:focusable="true"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:text="Sign In With AIYO "
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/forgot_pswd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facebook_signin_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundbutton_forgot_password"
            android:padding="8dp"
            android:text="Forgot Password"
            android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:background="@drawable/roundbutton_transparent"
        android:padding="8dp"
        android:layout_marginStart="56dp"
        android:textColor="@android:color/white"
        android:layout_marginEnd="56dp"
        android:text="SignUp to AIYO"
        android:drawableEnd="@drawable/right_arrow_icon"
        android:gravity="center"
        android:id="@+id/aiyoSignUp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_margin="16dp"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:text="AIYO Buy and sell services." />

</RelativeLayout>