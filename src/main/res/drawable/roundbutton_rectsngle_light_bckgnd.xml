<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_window_focused="true" android:state_focused="true">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!-- view background color -->
            <solid
                android:color="@color/selectedColor" >
            </solid>

            <!-- view border color and width -->
            <stroke
                android:width="3dp"
                android:color="@color/endColor" >
            </stroke>

            <!-- If you want to add some padding -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"    >
            </padding>

            <!-- Here is the corner radius -->
            <corners
                android:radius="30dp"   >
            </corners>

        </shape>
    </item>
<item>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >

    <!-- view background color -->
    <solid
        android:color="#886d6d6d">
    </solid>

    <!-- view border color and width -->
    <stroke
        android:width="1dp"
        android:color="@android:color/transparent" >
    </stroke>

    <!-- If you want to add some padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"    >
    </padding>

    <!-- Here is the corner radius -->
    <corners
        android:radius="30dp"   >
    </corners>

</shape>
</item>

</selector>